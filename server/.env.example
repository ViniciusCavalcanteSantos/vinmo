# App
APP_NAME="Photon Cloud"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_URL_CLIENT=http://localhost:3000

# i18n
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Manutenção
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=redis

# Segurança
BCRYPT_ROUNDS=12

# Logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=vinmo
DB_USERNAME=vinmo
DB_PASSWORD=vinmo

# Session / cache
SESSION_DRIVER=redis
SESSION_LIFETIME=240
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=localhost
SANCTUM_STATEFUL_DOMAINS=localhost:3000
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_PREFIX=photon

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="oficial@photon.com"
MAIL_FROM_NAME="${APP_NAME}"

# Storage (Minio local dev)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio12345
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=vinmo-dev
AWS_URL=http://localhost:9000/vinmo-dev
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# Rekognition
REKOGNITION_COLLECTION_ID=vinmo-faces-dev
REKOGNITION_USE_S3_OBJECT=false
REKOGNITION_DISK=
REKOGNITION_BUCKET=
REKOGNITION_REGION=
REKOGNITION_KEY=
REKOGNITION_SECRET=

# OAuth
GOOGLE_CLIENT_ID=null
GOOGLE_CLIENT_SECRET=null
GOOGLE_REDIRECT_URL="${APP_URL}/api/auth/google/callback"

MICROSOFT_CLIENT_ID=null
MICROSOFT_CLIENT_SECRET=null
MICROSOFT_REDIRECT_URL="${APP_URL}/api/auth/microsoft/callback"

LINKEDIN_CLIENT_ID=null
LINKEDIN_CLIENT_SECRET=null
LINKEDIN_REDIRECT_URL="${APP_URL}/api/auth/linkedin/callback"

# Dev
MAX_EMAIL_CONFIRMATION_ATTEMPTS=5
IMAGE_PROXY=true
GITHUB_WEBHOOK_SECRET=
